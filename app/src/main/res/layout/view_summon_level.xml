<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle"
        android:background="@drawable/bg_press_light_sky">

        <TextView
            android:id="@+id/sld_row_level"
            style="@style/sld_row_item"
            android:layout_width="@dimen/t70dp"
            tools:text="1150"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ddd"/>

        <TextView
            android:id="@+id/sld_row_exp_dx"
            style="@style/sld_row_item"
            android:layout_width="@dimen/t110dp"
            tools:text="980665"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/sld_row_exp_sum"
            style="@style/sld_row_item"
            android:layout_width="@dimen/t140dp"
            tools:text="315699657"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ddd"/>

        <TextView
            android:id="@+id/sld_row_stamina"
            style="@style/sld_row_item"
            tools:text="218"/>

        <TextView
            android:id="@+id/sld_row_team_cost"
            style="@style/sld_row_item"
            tools:text="194"/>

        <TextView
            android:id="@+id/sld_row_team_slot"
            style="@style/sld_row_item"
            tools:text="20"/>
    </LinearLayout>

    <View
        android:id="@+id/sld_row_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>