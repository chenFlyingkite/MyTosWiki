<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/t5dp"
    android:background="@drawable/bg_round_darkgray">

    <TextView
        android:id="@+id/cmd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/dialog_title2"
        android:text="@string/how_to_use"/>

    <TextView
        android:id="@+id/cmd_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/whiteText.t2"
        android:paddingTop="@dimen/t10dp"
        android:layout_below="@id/cmd_title"
        android:text="@string/how_to_use_pack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cmd_message"
        android:gravity="right"
        android:orientation="horizontal">

        <!--
        <TextView
            android:id="@+id/cmd_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/common_base.button"
            android:text="@string/cancel"/>\
        -->

        <TextView
            android:id="@+id/cmd_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/common_base.button"
            android:text="@string/ok"/>
    </LinearLayout>


</RelativeLayout>