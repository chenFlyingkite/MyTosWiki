<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">

            <TextView
                style="@style/dialog_title"
                android:text="@string/skill_eat_title"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/skillArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/t40dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        style="@style/evoArrow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/skillArrow"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/cards_level"/>

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/progress"/>

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/sumRound"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/skillFrom"
                            style="@style/sed_spinner"/>

                        <Spinner
                            android:id="@+id/skillPercent"
                            style="@style/sed_spinner"/>

                        <TextView
                            android:id="@+id/skillFromRound"
                            style="@style/sed_round_text.left"
                            android:text="0"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/skillArrow"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/cards_level"/>

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/sumRound"/>

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/needRound"
                            android:textColor="#00a"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/skillTo"
                            style="@style/sed_spinner"/>

                        <TextView
                            android:id="@+id/skillToRound"
                            style="@style/sed_round_text.left"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/skillNeedRound"
                            style="@style/sed_round_text.left"
                            android:text="0"
                            android:textColor="#00a"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                style="@style/divider_horizontal"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/skillUse600"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/t10dp"
                        android:text="@string/skill_eat600"
                        android:textSize="@dimen/t15dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/skillCard600"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/skillEatCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skill_eat_card"
                android:textColor="#080"
                android:textSize="@dimen/t18dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/blackText"
                    android:text="@string/share"/>

                <Button
                    android:id="@+id/skillShareEat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skill_eat"
                    android:layout_marginRight="@dimen/t10dp"/>

                <Button
                    android:id="@+id/skillShareTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/table"
                    android:layout_marginRight="@dimen/t10dp"/>
            </LinearLayout>

            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/blackText"
                    android:text="@string/related"/>

                <ImageView
                    android:id="@+id/skillEatLevel"
                    style="@style/card_icon"
                    android:src="@drawable/card_1777"/>
            </LinearLayout>
            -->

            <View
                style="@style/divider_horizontal"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/skillTable"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t200dp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_darkgray"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/selConcept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rect_skyblue">
                    <TextView
                        style="@style/common_text.white"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/t2dp"
                        android:textSize="@dimen/t18dp"
                        android:text="@string/skillLv_concept"/>

                    <TextView
                        style="@style/common_text.white"
                        android:paddingLeft="@dimen/t8dp"
                        android:textSize="@dimen/t16dp"
                        android:text="@string/skillLv_concept_detail"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/t20dp"/>

                <TextView
                    style="@style/common_text.white"
                    android:text="@string/skillLv_header"
                    android:textStyle="bold"
                    android:textSize="@dimen/t18dp"/>

                <GridLayout
                    android:id="@+id/selSuggest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rect_green"
                    android:padding="@dimen/t2dp"
                    android:columnCount="2">

                    <!-- 3 = 1 + 1 x 4 -->
                    <LinearLayout
                        style="@style/skillLv_row">
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_03"/>
                        <ImageView
                            style="@style/evoArrow"
                            android:padding="@dimen/t2dp"
                            android:scaleX="-1"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_01"/>
                        <ImageView
                            style="@style/evoPlus"
                            android:padding="@dimen/t2dp"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_01"/>
                        <TextView
                            style="@style/common_text.white"
                            android:text=" x 4"/>
                    </LinearLayout>

                    <!-- 4 = 3 + 1 x 5 -->
                    <LinearLayout
                        style="@style/skillLv_row">
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_04"/>
                        <ImageView
                            style="@style/evoArrow"
                            android:padding="@dimen/t2dp"
                            android:scaleX="-1"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_03"/>
                        <ImageView
                            style="@style/evoPlus"
                            android:padding="@dimen/t2dp"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_01"/>
                        <TextView
                            style="@style/common_text.white"
                            android:text=" x 5"/>
                    </LinearLayout>

                    <!-- 5 = 4 + 1 x 5 -->
                    <LinearLayout
                        style="@style/skillLv_row">
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_05"/>
                        <ImageView
                            style="@style/evoArrow"
                            android:padding="@dimen/t2dp"
                            android:scaleX="-1"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_04"/>
                        <ImageView
                            style="@style/evoPlus"
                            android:padding="@dimen/t2dp"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_01"/>
                        <TextView
                            style="@style/common_text.white"
                            android:text=" x 5"/>
                    </LinearLayout>
                    <!-- 5 = 1 + 200 -->
                    <LinearLayout
                        style="@style/skillLv_row">
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_05"/>
                        <ImageView
                            style="@style/evoArrow"
                            android:padding="@dimen/t2dp"
                            android:scaleX="-1"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_01"/>
                        <ImageView
                            style="@style/evoPlus"
                            android:padding="@dimen/t2dp"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/card_0617"/>
                        <TextView
                            style="@style/common_text.white"
                            android:text=" x 1"/>
                    </LinearLayout>
                    <!-- 7 = 1 + 200 x 5 -->
                    <LinearLayout
                        style="@style/skillLv_row">
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_07"/>
                        <ImageView
                            style="@style/evoArrow"
                            android:padding="@dimen/t2dp"
                            android:scaleX="-1"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_01"/>
                        <ImageView
                            style="@style/evoPlus"
                            android:padding="@dimen/t2dp"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/card_0617"/>
                        <TextView
                            style="@style/common_text.white"
                            android:text=" x 5"/>
                    </LinearLayout>
                    <!-- 8 = 5 + 5 x 5 -->
                    <LinearLayout
                        style="@style/skillLv_row">
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_08"/>
                        <ImageView
                            style="@style/evoArrow"
                            android:padding="@dimen/t2dp"
                            android:scaleX="-1"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_05"/>
                        <ImageView
                            style="@style/evoPlus"
                            android:padding="@dimen/t2dp"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_05"/>
                        <TextView
                            style="@style/common_text.white"
                            android:text=" x 5"/>
                    </LinearLayout>
                    <!-- 12 = 10 + 10 x 1 -->
                    <LinearLayout
                        style="@style/skillLv_row">
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_12"/>
                        <ImageView
                            style="@style/evoArrow"
                            android:padding="@dimen/t2dp"
                            android:scaleX="-1"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_10"/>
                        <ImageView
                            style="@style/evoPlus"
                            android:padding="@dimen/t2dp"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_10"/>
                        <TextView
                            style="@style/common_text.white"
                            android:text=" x 1"/>
                    </LinearLayout>
                    <!-- 15 = 10 + 10 x 2 -->
                    <LinearLayout
                        style="@style/skillLv_row">
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_15"/>
                        <ImageView
                            style="@style/evoArrow"
                            android:padding="@dimen/t2dp"
                            android:scaleX="-1"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_10"/>
                        <ImageView
                            style="@style/evoPlus"
                            android:padding="@dimen/t2dp"/>
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_10"/>
                        <TextView
                            style="@style/common_text.white"
                            android:text=" x 2"/>
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>