<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">

            <TextView
                style="@style/dialog_title"
                android:text="@string/skill_eat_title"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/skillArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/t40dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="@dimen/t30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:src="@drawable/evo_arrow"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/skillArrow"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/cards_level"/>

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/progress"/>

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/sumRound"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/skillFrom"
                            style="@style/sed_spinner"/>

                        <Spinner
                            android:id="@+id/skillPercent"
                            style="@style/sed_spinner"/>

                        <TextView
                            android:id="@+id/skillFromRound"
                            style="@style/sed_round_text.left"
                            android:text="0"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/skillArrow"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/cards_level"/>

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/sumRound"/>

                        <TextView
                            style="@style/sed_round_text"
                            android:text="@string/needRound"
                            android:textColor="#00a"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/skillTo"
                            style="@style/sed_spinner"/>

                        <TextView
                            android:id="@+id/skillToRound"
                            style="@style/sed_round_text.left"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/skillNeedRound"
                            style="@style/sed_round_text.left"
                            android:text="0"
                            android:textColor="#00a"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                style="@style/divider_horizontal"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/skillUse600"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/t10dp"
                        android:text="@string/skill_eat600"
                        android:textSize="@dimen/t15dp"/>

                    <ImageView
                        style="@style/icon_t40"
                        android:src="@drawable/card_1709" />

                    <ImageView
                        style="@style/icon_t40"
                        android:src="@drawable/card_1735"/>

                    <ImageView
                        style="@style/icon_t40"
                        android:src="@drawable/card_1777"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/skillEatCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skill_eat_card"
                android:textColor="#080"
                android:textSize="@dimen/t18dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/blackText"
                    android:text="@string/share"/>

                <Button
                    android:id="@+id/skillShareEat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skill_eat"
                    android:layout_marginRight="@dimen/t10dp"/>

                <Button
                    android:id="@+id/skillShareTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/table"
                    android:layout_marginRight="@dimen/t10dp"/>
            </LinearLayout>

            <View
                style="@style/divider_horizontal"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/skillTable"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t250dp"
                android:layout_gravity="center_horizontal">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>