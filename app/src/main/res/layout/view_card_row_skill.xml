<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="#8000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/cardRow.blueV"
        android:orientation="horizontal">

        <TextView
            style="@style/cardText.header.4"
            android:text="@string/cards_skillActive"/>

        <TextView
            style="@style/cardText.header.2"
            android:text="@string/cards_skillMin"/>

        <TextView
            style="@style/cardText.header.2"
            android:text="@string/cards_skillMax"/>

        <TextView
            style="@style/cardText.header.2"
            android:text="@string/cards_maxLv"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/cardRow.greenV"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cardSkillName"
            style="@style/cardText.item.4"
            tools:text="技能\n名稱"/>

        <TextView
            android:id="@+id/cardSkillCDMin"
            style="@style/cardText.item.2"
            tools:text="14"/>

        <TextView
            android:id="@+id/cardSkillCDMax"
            style="@style/cardText.item.2"
            tools:text="5"/>

        <TextView
            android:id="@+id/cardSkillLv"
            style="@style/cardText.item.2"
            tools:text="10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cardRow.greenV">

        <TextView
            android:id="@+id/cardSkillDesc"
            style="@style/cardText.item.10"
            tools:text="技能內容"/>
    </LinearLayout>
</LinearLayout>