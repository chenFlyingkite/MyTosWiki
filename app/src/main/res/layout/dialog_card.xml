<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="@dimen/t360dp"
            android:layout_height="@dimen/t200dp"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/card_background"
            tools:background="#a00"/>


        <ImageView
            android:id="@+id/cardIcon"
            android:layout_width="@dimen/t70dp"
            android:layout_height="@dimen/t70dp"
            android:src="@drawable/unknown_card"
            tools:background="#aa0"/>

        <TextView
            android:id="@+id/cardInfo"
            android:layout_below="@id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"/>

    </RelativeLayout>
</ScrollView>