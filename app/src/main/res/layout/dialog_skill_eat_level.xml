                    <!-- 7 = 1 + 200 x 5 -->
                    <LinearLayout
                        style="@style/skillLv_row">
                        <ImageView
                            style="@style/number_icon"
                            android:src="@drawable/num_07"/>
                        <ImageView
                            style="@style/evoArrow"
