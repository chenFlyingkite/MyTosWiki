<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/grey3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include
            android:id="@+id/evolveCard1"
            layout="@layout/view_tos_item_evolve_item"/>
        <include
            android:id="@+id/evolveCard2"
            layout="@layout/view_tos_item_evolve_item"/>
        <include
            android:id="@+id/evolveCard3"
            layout="@layout/view_tos_item_evolve_item"/>
        <include
            android:id="@+id/evolveCard4"
            layout="@layout/view_tos_item_evolve_item"/>
        <include
            android:id="@+id/evolveCard5"
            layout="@layout/view_tos_item_evolve_item"/>

        <!-- max = 5 -->
        <include
            android:id="@+id/evolveCard6"
            layout="@layout/view_tos_item_evolve_item"/>
    </LinearLayout>

    <TextView
        android:id="@+id/evolveMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456879"
        style="@style/whiteText"/>

</LinearLayout>