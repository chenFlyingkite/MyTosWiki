<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- 4 = 3 + 1 x 5 -->
    <LinearLayout
        style="@style/skillLv_row">
        <ImageView
            android:id="@+id/skillRow04To"
            style="@style/number_icon"
            android:src="@drawable/num_04"/>
        <ImageView
            style="@style/evoArrow"
            android:padding="@dimen/t2dp"
            android:scaleX="-1"/>
        <ImageView
            android:id="@+id/skillRow04From"
            style="@style/number_icon"
            android:src="@drawable/num_03"/>
        <ImageView
            style="@style/evoPlus"
            android:padding="@dimen/t2dp"/>
        <ImageView
            android:id="@+id/skillRow04Need"
            style="@style/number_icon"
            android:src="@drawable/num_01"/>
        <TextView
            style="@style/common_text.white"
            android:text=" x 5"/>
    </LinearLayout>
</RelativeLayout>