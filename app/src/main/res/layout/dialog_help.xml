<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_darkgray">

        <LinearLayout
            android:id="@+id/help_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                style="@style/dialog_title"
                android:text="@string/help_title"
                android:textColor="#fff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/t10dp">

                <LinearLayout
                    android:id="@+id/help_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/card_icon.chrome" />

                    <TextView
                        style="@style/cardText"
                        android:text="@string/help_open_web" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/help_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/card_icon.saveW"/>

                    <TextView
                        style="@style/cardText"
                        android:text="@string/help_save_image" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/help_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/help_card_icon"
                        style="@style/cardIcon"
                        android:src="@drawable/card_1777"/>

                    <TextView
                        style="@style/cardText"
                        android:text="@string/help_card_long_press" />
                </LinearLayout>

                <TextView
                    android:id="@+id/help_select"
                    style="@style/sortText.rect"
                    android:textSize="@dimen/t20dp"
                    android:text="淺藍色框可選擇" />

                <TextView
                    android:id="@+id/help_yellow_text"
                    style="@style/cardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黃色的字可以點擊"
                    android:textColor="@color/yellow" />

                <TextView
                    android:id="@+id/help_blue_text"
                    style="@style/cardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="藍色的字可以點擊"
                    android:textColor="@color/skyBlue" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>