<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_darkgray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fsdTitle"
                    style="@style/dialog_title.white"
                    android:paddingLeft="@dimen/t5dp"
                    android:layout_width="match_parent"
                    android:text="@string/free_move_title"/>

                <ImageView
                    android:id="@+id/fsdSave"
                    style="@style/sortIcon.saveW"/>

                <LinearLayout
                    android:id="@+id/fsdContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/grey4"
                    android:orientation="vertical">
                    <TextView
                        style="@style/common_text.white"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/t2dp"
                        android:textSize="@dimen/t18dp"
                        android:text="@string/free_move_concept"/>

                    <TextView
                        android:id="@+id/fsdDetail"
                        style="@style/common_text.white"
                        android:paddingLeft="@dimen/t8dp"
                        android:textSize="@dimen/t16dp"
                        android:text="@string/free_move_detail"/>

                    <View
                        style="@style/divider_h2px"/>

                    <LinearLayout
                        android:id="@+id/fsdDesktopAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:showDividers="middle|end"
                        android:divider="@drawable/divider_skyblue"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>
</RelativeLayout>