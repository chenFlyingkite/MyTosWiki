<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/t160dp"
            android:textColor="#fff"
            android:textSize="@dimen/t110dp"
            android:text="  \u222B     dt"/>

        <FrameLayout
            android:id="@+id/aicIcon1"
            android:layout_width="1024px"
            android:layout_height="1024px"
            android:background="#0fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/skyBlue"
                android:layout_marginLeft="-60dp"
                android:layout_marginTop="-80dp"
                android:textSize="320dp"
                android:text=" \u222B "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/skyBlue"
                android:layout_gravity="center_vertical|right"
                android:textSize="90dp"
                android:text="dt"/>

            <ImageView
                android:layout_width="530px"
                android:layout_height="530px"
                android:layout_gravity="center"
                android:src="@drawable/article_1003"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="1024px"
            android:layout_height="1024px"
            android:background="#fff">

            <io.github.kexanie.library.MathView
                android:id="@+id/aicMathInt"
                android:layout_width="@dimen/t150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                app:text="\\(\\int\\)"/>

            <io.github.kexanie.library.MathView
                android:id="@+id/aicMathDt"
                android:layout_width="@dimen/t80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:background="@color/transparent"
                app:text="\\(dt\\)"/>

            <ImageView
                android:layout_width="512px"
                android:layout_height="512px"
                android:layout_gravity="center"
                android:src="@drawable/article_1003"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>