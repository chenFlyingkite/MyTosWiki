<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/t5dp"
    android:background="@drawable/bg_round_darkgray">

    <TextView
        android:id="@+id/cmd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/common_base.title"
        tools:text="Title title"/>

    <TextView
        android:id="@+id/cmd_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/common_base.message"
        android:layout_below="@id/cmd_title"
        tools:text="Title title MSG MSG MSG"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cmd_message"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cmd_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/common_base.button"
            android:text="@string/cancel"/>

        <TextView
            android:id="@+id/cmd_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/common_base.button"
            android:text="@string/ok"/>
    </LinearLayout>


</RelativeLayout>