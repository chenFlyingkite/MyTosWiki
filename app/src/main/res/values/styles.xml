        <item name="android:layout_height">@dimen/t40dp</item>
    </style>
    <style name="sortStarText" parent="sortIcon">
        <item name="android:textColor">#fff</item>
        <item name="android:shadowColor">#00a</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/t30dp</item>
        <item name="android:background">@drawable/bg_press_sky_rect</item>
    </style>

    <style name="sortRadio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
