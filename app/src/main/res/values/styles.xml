<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="CommonAlertDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <style name="CommonAlertDialog.noFloating">
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="WaitingDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="common_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t14dp</item>
    </style>
    <style name="common_text.white">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="common_text.black">
        <item name="android:textColor">#000</item>
    </style>

    <style name="commonIcon">
        <item name="android:layout_width">@dimen/t50dp</item>
        <item name="android:layout_height">@dimen/t50dp</item>
    </style>

    <style name="evoArrow">
        <item name="android:layout_width">@dimen/t30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/evo_arrow</item>
    </style>

    <style name="evoPlus">
        <item name="android:layout_width">@dimen/t20dp</item>
        <item name="android:layout_height">@dimen/t20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/evo_plus</item>
    </style>

    <style name="blackText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t18dp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="blackText.2">
        <item name="android:paddingLeft">@dimen/t5dp</item>
        <item name="android:paddingRight">@dimen/t5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="blackText.t2">
        <item name="android:padding">@dimen/t2dp</item>
    </style>

    <style name="whiteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t18dp</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="whiteText.t2">
        <item name="android:padding">@dimen/t2dp</item>
        <item name="android:autoLink">web</item>
    </style>

    <!-- Borders of table -->
    <style name="cardRow">
        <item name="android:showDividers">middle</item>
    </style>
    <style name="cardRow.blueV">
        <item name="android:background">@drawable/bg_rect_skyblue</item>
        <item name="android:divider">@drawable/bg_v_skyblue</item>
    </style>
    <style name="cardRow.greenV">
        <item name="android:background">@drawable/bg_rect_green</item>
        <item name="android:divider">@drawable/bg_v_green</item>
    </style>

