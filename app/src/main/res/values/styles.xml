<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="CommonAlertDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <style name="CommonAlertDialog.noFloating">
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="WaitingDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="common_text">
        <item name="android:textSize">@dimen/t14dp</item>
    </style>

    <style name="blackText">
        <item name="android:textSize">@dimen/t18dp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="blackText.2">
        <item name="android:paddingLeft">@dimen/t5dp</item>
        <item name="android:paddingRight">@dimen/t5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Borders of table -->
    <style name="cardRow">
        <item name="android:showDividers">middle</item>
    </style>
    <style name="cardRow.blueV">
        <item name="android:background">@drawable/bg_rect_skyblue</item>
        <item name="android:divider">@drawable/bg_v_skyblue</item>
    </style>
    <style name="cardRow.greenV">
        <item name="android:background">@drawable/bg_rect_green</item>
        <item name="android:divider">@drawable/bg_v_green</item>
    </style>

    <!-- Texts of table -->
    <style name="cardText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/t20dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/t5dp</item>
        <item name="android:paddingRight">@dimen/t5dp</item>
    </style>
    <style name="cardText.header">
        <item name="android:textSize">@dimen/t15dp</item>
    </style>
    <style name="cardText.header.1">
        <item name="android:layout_width">@dimen/cardText1</item>
    </style>
    <style name="cardText.header.2">
        <item name="android:layout_width">@dimen/cardText2</item>
    </style>
    <style name="cardText.header.4">
        <item name="android:layout_width">@dimen/cardText4</item>
    </style>
    <style name="cardText.header.6">
        <item name="android:layout_width">@dimen/cardText6</item>
    </style>
    <style name="cardText.header.8">
        <item name="android:layout_width">@dimen/cardText8</item>
    </style>
    <style name="cardText.header.10">
        <item name="android:layout_width">@dimen/cardText10</item>
    </style>
    <style name="cardText.item">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="cardText.item.1">
        <item name="android:layout_width">@dimen/cardText1</item>
    </style>
    <style name="cardText.item.2">
        <item name="android:layout_width">@dimen/cardText2</item>
    </style>
    <style name="cardText.item.4">
        <item name="android:layout_width">@dimen/cardText4</item>
    </style>
    <style name="cardText.item.6">
        <item name="android:layout_width">@dimen/cardText6</item>
    </style>
    <style name="cardText.item.8">
        <item name="android:layout_width">@dimen/cardText8</item>
    </style>
    <style name="cardText.item.10">
        <item name="android:layout_width">@dimen/cardText10</item>
    </style>

    <style name="gray_button" parent="common_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/t10dp</item>
        <item name="android:paddingRight">@dimen/t10dp</item>
        <item name="android:paddingTop">@dimen/t5dp</item>
        <item name="android:paddingBottom">@dimen/t5dp</item>
        <item name="android:textSize">@dimen/t18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_round</item>
    </style>

    <!-- Sort menu -->
    <style name="sortTitle">
        <item name="android:textSize">@dimen/t18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="sortIcon">
        <item name="android:layout_width">@dimen/t50dp</item>
        <item name="android:layout_height">@dimen/t50dp</item>
        <item name="android:padding">@dimen/t5dp</item>
        <item name="android:background">@drawable/bg_press_sky</item>
    </style>
    <style name="sortStarText" parent="sortIcon">
        <item name="android:textColor">#fff</item>
        <item name="android:shadowColor">#00a</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/t30dp</item>
    </style>

    <style name="sortRadio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/bg_press_sky</item>
    </style>
    <style name="sortText" parent="sortRadio">
        <item name="android:padding">@dimen/t5dp</item>
        <item name="android:textSize">@dimen/t16dp</item>
    </style>

    <style name="tosIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_press_sky</item>
    </style>

    <style name="tosGoTop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:rotation">270</item>
        <item name="android:src">@drawable/ic_skip_next_black_48dp</item>
        <item name="android:background">@drawable/bg_press_sky</item>
    </style>

    <style name="tosGoBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:rotation">90</item>
        <item name="android:src">@drawable/ic_skip_next_black_48dp</item>
        <item name="android:background">@drawable/bg_press_sky</item>
    </style>

    <style name="textsIcon">
        <item name="android:layout_width">@dimen/t50dp</item>
        <item name="android:layout_height">@dimen/t50dp</item>
        <item name="android:background">@drawable/bg_press_sky</item>
    </style>

    <style name="divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/t3dp</item>
        <item name="android:background">#888</item>
    </style>

    <style name="divider_horizontal_1dp_ddd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ddd</item>
    </style>

    <!-- sed = Skill Eat Dialog -->
    <style name="sed_round_text" parent="blackText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/t40dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="sed_round_text.left">
        <item name="android:paddingLeft">@dimen/t10dp</item>
    </style>
    <style name="sed_spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/t40dp</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:minWidth">@dimen/t200dp</item>
    </style>

    <!-- sld = Summoner Level Dialog -->
    <style name="sld_row_item" parent="blackText">
        <item name="android:layout_width">@dimen/t60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">@dimen/t5dp</item>
        <item name="android:paddingRight">@dimen/t5dp</item>
    </style>

    <!-- mld = Monster Level Dialog -->
    <style name="mld_row_item" parent="sld_row_item">
        <item name="android:layout_width">@dimen/t50dp</item>
    </style>

    <style name="dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t14dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="card_icon">
        <item name="android:layout_width">@dimen/t40dp</item>
        <item name="android:layout_height">@dimen/t40dp</item>
        <item name="android:padding">@dimen/t2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_press_light_sky</item>
    </style>
    <style name="card_icon.chrome">
        <item name="android:src">@drawable/logo_chrome</item>
    </style>

    <style name="icon_t40">
        <item name="android:layout_width">@dimen/t40dp</item>
        <item name="android:layout_height">@dimen/t40dp</item>
    </style>

    <!-- Skill eat -->

    <style name="common_base">
        <item name="android:padding">@dimen/t20dp</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="common_base.title">
        <item name="android:textSize">@dimen/t20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="common_base.message">
        <item name="android:textSize">@dimen/t16dp</item>
    </style>
    <style name="common_base.button">
        <item name="android:background">@drawable/bg_press_gray4</item>
        <item name="android:textSize">@dimen/t16dp</item>
        <item name="android:textColor">@color/text_sky</item>
    </style>

    <style name="card_sort_active">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/t25dp</item>
        <item name="android:padding">@dimen/t5dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="toswiki_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/t48dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/toswiki_wordmark</item>
    </style>

    <style name="square_t70">
        <item name="android:layout_width">@dimen/t70dp</item>
        <item name="android:layout_height">@dimen/t70dp</item>
    </style>


</resources>
