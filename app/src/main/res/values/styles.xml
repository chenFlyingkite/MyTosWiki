    </style>
    <style name="tosGoTopW.t40">
        <item name="android:layout_width">@dimen/t40dp</item>
        <item name="android:layout_height">@dimen/t40dp</item>
    </style>

    <style name="tosGoBottomW" parent="tosGo.W">
        <item name="android:rotation">90</item>
    </style>
    <style name="tosGoBottomW.t40">
        <item name="android:layout_width">@dimen/t40dp</item>
        <item name="android:layout_height">@dimen/t40dp</item>
    </style>

    <style name="textsIcon" parent="commonIcon">
        <item name="android:background">@drawable/bg_press_sky</item>
    </style>

    <style name="cardIcon" parent="textsIcon">
        <item name="android:padding">@dimen/t2dp</item>
        <item name="android:src">@drawable/unknown_card</item>
    </style>


    <style name="divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/t3dp</item>
        <item name="android:background">#888</item>
    </style>

    <style name="divider_h2px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/colorPrimary</item>
