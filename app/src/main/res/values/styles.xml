    <style name="gray_button" parent="common_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/t10dp</item>
        <item name="android:paddingRight">@dimen/t10dp</item>
