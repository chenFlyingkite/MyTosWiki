    <style name="cardText.item.5">
        <item name="android:layout_width">@dimen/cardText5</item>
    </style>
    <style name="cardText.item.6">
        <item name="android:layout_width">@dimen/cardText6</item>
    </style>
    <style name="cardText.item.7">
        <item name="android:layout_width">@dimen/cardText7</item>
    </style>
    <style name="cardText.item.8">
        <item name="android:layout_width">@dimen/cardText8</item>
    </style>
    <style name="cardText.item.9">
        <item name="android:layout_width">@dimen/cardText9</item>
    </style>
    <style name="cardText.item.10">
