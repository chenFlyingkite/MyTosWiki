    </style>
    <style name="sortIcon.saveW.t40">
        <item name="android:layout_width">@dimen/t40dp</item>
        <item name="android:layout_height">@dimen/t40dp</item>
    </style>
    <style name="sortIcon.shareW">
        <item name="android:src">@drawable/ic_share_white_48dp</item>
    </style>
    <style name="sortIcon.shareB">
        <item name="android:src">@drawable/ic_share_black_48dp</item>
    </style>
    <style name="sortIcon.shareW.t40">
